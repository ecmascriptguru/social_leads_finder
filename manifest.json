{
	"manifest_version": 2,
	
	"name": "Social Crawler",
	"short_name": "Social Crawler",
	"description": "Social Crawler",
	"author": "Alexis Richard",
	"version": "0.0.1",
	
	"permissions": [
		"https://www.linkedin.com/*",
		"storage",
		"tabs"
	],

	"background": {
		"scripts": [
			"js/jquery.js",
			"js/common.js",
			"js/background.js"
		]
	},
	"content_scripts": [
		{
			"js": [
				"js/jquery.js",
				"js/google.js"
			],
			"matches": [
				"https://www.google.com/*",
				"https://www.google.co.nz/*",
				"https://www.google.com.au/*",
				"https://www.google.ca/*"
			],
			"run_at":    "document_end"
		},
		{
			"js": [
				"js/jquery.js",
				"js/emailfindr.js"
			],
			"matches": [
				"*://emailfindr.net/*"
			],
			"run_at":    "document_end"
		}
	],
	"browser_action": {
		"default_icon": {
			"19": "img/32.png",
			"38": "img/32.png"
		},
		"default_title": "Leads Generation",
		"default_popup": "pages/popup.html"
	},
	"web_accessible_resources": [
	],

	"icons": {
		"16": "img/16.png",
		"18": "img/18.png",
		"19": "img/19.png",
		"32": "img/32.png",
		"38": "img/38.png",
		"48": "img/48.png",
		"64": "img/64.png",
		"96": "img/96.png",
		"128": "img/128.png"
	},

	"options_page": "pages/options.html"
}